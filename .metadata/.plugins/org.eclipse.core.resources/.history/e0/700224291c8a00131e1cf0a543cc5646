
//Window
var cWin = Ti.UI.currentWindow;

var navWin = Ti.UI.iOS.createNavigationWindow({
	window: cWin
});

//Sign Off Button Start
var signOffButton = Ti.UI.createButton({
	title: "Sign Off",
	style: Ti.UI.iPhone.SystemButtonStyle.DONE,
	font:{fontWeight:'bold',fontSize:14, fontFamily:'Helvetica'},
});
var signOffWindow = function (){
	navWin.close();
};
signOffButton.addEventListener('click', signOffWindow);
cWin.setRightNavButton(signOffButton);
//Sign Off Button End


//MILLIMETER TO CENTIMETER CONVERTER START
// MM = CM Labels
var milliLabel = Ti.UI.createLabel({
    color: '#000',
    text: 'Millimeters',
    font: {fontSize: 18},
    left: 25,
    top: 10,
    width: 100
});

var equalLabel1 = Ti.UI.createLabel({
	color: '#000',
    text: '=',
    font: {fontSize: 18},
    left: 125,
    top: 40
});

var centiLabel1 = Titanium.UI.createLabel({
    color: '#000',
    text: 'Centimeters',
    font: {fontSize : 18},
    textAlign: 'center',
    top: 10,
    width: 100,
    right: 75
});

//Input text areas
var milliInput = Ti.UI.createTextField({
    borderWidth: 2,
    marginLeft: 'auto',
    marginRight: 'auto',
    borderColor: '#000',
    borderRadius: 3,
    color: '#999',
	hintText: '123',
    font: {fontSize : 22,fontWeight : 'bold'},
    keyboardType: Ti.UI.KEYBOARD_NUMBER_PAD,
    returnKeyType: Ti.UI.RETURNKEY_GO,
    textAlign: 'center',
    top: 30,
    left: 20,
    width: 100,
    height: 40
});

//Convertor button
var milliCon = Ti.UI.createButton({
    title: 'Convert',
    top: 35,
    right: 10
});

//Output result
var milliOutput = Titanium.UI.createLabel({
    borderWidth: 2,
    top: 30,
    width: 100,
    height: 40,
    right: 75,
    color: '#000',
    borderColor: '#000',
    borderRadius: 5,
    font: {fontSize : 22},
    textAlign: 'center',
    text: ''
});
 
var centi1 = 10;
milliCon.addEventListener('click', function(a) {
    milliOutput.text = (milliInput.value / centi1);
});
//MILLIMETER TO CENTIMETER CONVERTER END




//CENTIMETER TO INCHES CONVERTER START
// CM = IN Labels
var centiLabel2 = Ti.UI.createLabel({
    color: '#000',
    text: 'Centimeters',
    font: {fontSize: 18},
    left: 20,
    top: 100,
    width: 100
});

var equalLabel2 = Ti.UI.createLabel({
	color: '#000',
    text: '=',
    font: {fontSize: 18},
    left: 125,
    top: 130
});

var inchLabel1 = Titanium.UI.createLabel({
    color: '#000',
    text: 'Inches',
    font: {fontSize : 18},
    textAlign: 'center',
    top: 100,
    width: 100,
    right: 75
});

//Input text areas
var centiInput = Ti.UI.createTextField({
    borderWidth: 2,
    marginLeft: 'auto',
    marginRight: 'auto',
    borderColor: '#000',
    borderRadius: 3,
    color: '#999',
	hintText: '456',
    font: {fontSize : 22,fontWeight : 'bold'},
    keyboardType: Ti.UI.KEYBOARD_NUMBER_PAD,
    returnKeyType: Ti.UI.RETURNKEY_GO,
    textAlign: 'center',
    top: milliInput.top + 90,
    left: 20,
    width: 100,
    height: 40
});

//Convert button
var centiCon = Ti.UI.createButton({
    title : 'Convert',
    top : 125,
    right: 10 
});

//Output result
var centiOutput = Titanium.UI.createLabel({
    borderWidth: 2,
    top: milliOutput.top + 90,
    width: 100,
    height: 40,
    right: 75,
    color: '#000',
    borderColor: '#000',
    borderRadius: 5,
    font: {fontSize : 12},
    textAlign: 'center',
    text: ''
});
 
var inch1 = 2.54;
centiCon.addEventListener('click', function(b) {
    centiOutput.text = (centiInput.value / inch1);
});
//CENTIMETER TO INCH CONVERTER END




//INCHES TO FEET CONVERTER START
// IN = FT Labels
var inchLabel2 = Ti.UI.createLabel({
    color: '#000',
    text: 'Inch',
    font: {fontSize: 18},
    left: 50,
    top: milliInput.width + 90,
    width: 100
});

var equalLabel3 = Ti.UI.createLabel({
	color: '#000',
    text: '=',
    font: {fontSize: 18},
    left: 125,
    top: 220
});

var feetLabel1 = Titanium.UI.createLabel({
    color: '#000',
    text: 'Feet',
    font: {fontSize : 18},
    textAlign: 'center',
    top: milliInput.width + 90,
    width: 100,
    right: 75
});

//Input text areas
var inchInput = Ti.UI.createTextField({
    borderWidth: 2,
    marginLeft: 'auto',
    marginRight: 'auto',
    borderColor: '#000',
    borderRadius: 3,
    color: '#999',
	hintText: '789',
    font: {fontSize : 22,fontWeight : 'bold'},
    keyboardType: Ti.UI.KEYBOARD_NUMBER_PAD,
    returnKeyType: Ti.UI.RETURNKEY_GO,
    textAlign: 'center',
    top: centiInput.top + 90,
    left: 20,
    width: 100,
    height: 40
});

//Convertor button
var inchCon = Ti.UI.createButton({
    title : 'Convert',
    top : 215,
    right: 10 
});

//Output result
var inchOutput = Titanium.UI.createLabel({
    borderWidth: 2,
    top : milliOutput.top + 180,
    width : 100,
    height : 40,
    right: 75,
    color : '#000',
    borderColor: '#000',
    borderRadius : 5,
    font : {fontSize : 12},
    textAlign : 'center',
    text : ''
});
 
var foot1 = 12;
inchCon.addEventListener('click', function(c) {
    inchOutput.text = (inchInput.value / foot1);
});
//INCHS TO FEET CONVERTER END




//FEET TO YARDS CONVERTER START
// FT = YD Labels
var feetLabel2 = Ti.UI.createLabel({
    color: '#000',
    text: 'Feet',
    font: {fontSize: 18},
    left: 50,
    top: milliInput.width + 180,
    width: 100
});

var equalLabel4 = Ti.UI.createLabel({
	color: '#000',
    text: '=',
    font: {fontSize: 18},
    left: 125,
    top: 310
});

var yardLabel1 = Titanium.UI.createLabel({
    color: '#000',
    text: 'Yards',
    font: {fontSize : 18},
    textAlign: 'center',
    top: milliInput.width + 180,
    width: 100,
    right: 75
});

//Input text areas
var feetInput = Ti.UI.createTextArea({
    borderWidth: 2,
    marginLeft: 'auto',
    marginRight: 'auto',
    borderColor: '#000',
    borderRadius: 3,
    color: '#999',
	hintText: '789',
    font: {fontSize : 22,fontWeight : 'bold'},
    keyboardType: Ti.UI.KEYBOARD_NUMBER_PAD,
    returnKeyType: Ti.UI.RETURNKEY_GO,
    textAlign: 'center',
    top: centiInput.top + 180,
    left: 20,
    width: 100,
    height: 40
});

//Convertor button
var feetCon = Ti.UI.createButton({
    title : 'Convert',
    top : 125,
    right: 10 
});

//Output result
var feetOutput = Titanium.UI.createLabel({
    borderWidth: 2,
    top: inchOutput.top + 90,
    width: 100,
    height: 40,
    right: 75,
    color: '#000',
    borderColor: '#000',
    borderRadius: 5,
    font: {fontSize : 12},
    textAlign: 'center',
    text: ''
});
 
var yard1 = 12;
feetCon.addEventListener('click', function(d) {
   feetOutput.text = (feetInput.value / yard1);
});
//FEET TO YARDS CONVERTER END









//Main Code
cWin.add(feetLabel2, equalLabel4, yardLabel1, feetInput, feetCon, feetOutput);
cWin.add(inchLabel2, equalLabel3, feetLabel1, inchInput, inchOutput, inchCon);
cWin.add(centiLabel2, equalLabel2, inchLabel1, centiInput, centiOutput, centiCon);
cWin.add(milliLabel, equalLabel1, centiLabel1, milliInput, milliOutput, milliCon);
navWin.open();