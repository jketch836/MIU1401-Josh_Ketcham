Ti.UI.setBackgroundColor ('white');


//Landing Page
var mWindow = Ti.UI.createWindow({
	title: "Login page"
});



var image = Ti.UI.createImageView({
	image:'ruler.png'
});


var emailTextArea = Ti.UI.createTextArea({
  borderWidth: 2,
  borderColor: '#000',
  borderRadius: 5,
  color: '#888',
  font: {fontSize:20, fontWeight:'bold'},
  keyboardType: Ti.UI.KEYBOARD_DEFAULT,
  returnKeyType: Ti.UI.RETURNKEY_GO,
  textAlign: 'left',
  value: 'Enter Email',
  bottom: 250,
  width: 300, height : 40
});

var passwordTextArea = Ti.UI.createTextArea({
  borderWidth: 2,
  borderColor: '#000',
  borderRadius: 5,
  color: '#888',
  font: {fontSize:20, fontWeight:'bold'},
  keyboardType: Ti.UI.KEYBOARD_DEFAULT,
  returnKeyType: Ti.UI.RETURNKEY_GO,
  textAlign: 'left',
  value: 'Enter Password',
  bottom: 190,
  width: 300, height : 40
});


//Main Code
mWindow.add(emailTextArea, passwordTextArea);
mWindow. open();