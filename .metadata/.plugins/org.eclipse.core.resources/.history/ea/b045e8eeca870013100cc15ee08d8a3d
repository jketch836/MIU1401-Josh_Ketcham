Ti.UI.setBackgroundColor ('white');


//Landing Page
var mWindow = Ti.UI.createWindow({
	title: "Login page"
});



var image = Ti.UI.createImageView({
	image:'ruler.png',
	top: 70
});

 
var theUsername = Titanium.UI.createTextField({
    color:'#000',
    top:240,
    left:10,
    width:300,
    height:40,
    hintText:'Username',
    font:{fontWeight:'bold',fontSize:14, fontFamily:'Helvetica'},
    borderStyle:Titanium.UI.INPUT_BORDERSTYLE_ROUNDED
});
 
var thePassword = Titanium.UI.createTextField({
    color:'#000',
    top:290,
    left:10,
    width:300,
    height:40,
    hintText:'Password',
    font:{fontWeight:'bold',fontSize:14, fontFamily:'Helvetica'},
//  passwordMask:true,
    borderStyle: Titanium.UI.INPUT_BORDERSTYLE_ROUNDED
});
 
var loginButton = Titanium.UI.createButton({
    title:'Login',
    top:340,
    width:90,
    height:35,
    borderRadius:5,
   	font:{fontWeight:'bold',fontSize:14, fontFamily:'Helvetica'}
});
 
loginButton.addEventListener('click',function(l)
{
        var mainWindow = Titanium.UI.createWindow({  
            title:'Main Menu',
            backgroundColor:'#fff'
        });
 
        var label1 = Titanium.UI.createLabel({
            color:'#999',
            font:{fontSize:20,fontFamily:'Helvetica'},
            textAlign:'center',
            width:'auto'
        });
 
        mainWindow.add(label1);
});



//Main Code
mWindow.add(image, theUsername, thePassword, loginButton);
mWindow. open();